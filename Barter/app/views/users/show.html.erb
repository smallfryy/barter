<div class="ui large message">

<h1><%= @user.first_name %>  <%= @user.last_name %></h1>
  <img class="ui medium circular image" src="images/square-image.png">
<% if @user == current_user %>
  <h5>Karma Balance: <%= @user.karma.balance %></h5>
<% end %>

<h4>Member Since: <%= @user.member_since %></h4>
<% if @user.last_sign_in %>
  <h4>Last Sign In: <%= @user.last_sign_in %></h4>
<% end %>
<h4>Books Sold: <%= @user.num_books_sold %></h4>
<h4>Books For Sale: <%= @user.num_books_for_sale %></h4>


<% if @user.college %>
  <h4>College: <%= link_to(@user.college.name, college_path(@user.college_id)) %></h4>
<% end %>

<h4>Books Currently Listed:</h4>
<ul>
  <% @user.books_for_sale.each do |book| %>
    <li><%= link_to(book.textbook.title, textbook_path(book.textbook.id)) %></li>
  <% end %>
</ul>

<% if current_user == @user %>

<h4> Books You've Purchased: </h4>
<ul>
  <% @user.books_purchased.each do |book| %>
    <li><%= link_to(book.textbook.title, textbook_path(book.textbook.id)) %></li>
  <% end %>
</ul>

<h4>Books You've Sold:</h4>
<ul>
  <% @user.books_sold.each do |book| %>
    <li><%= link_to(book.textbook.title, textbook_path(book.textbook.id)) %></li>
  <% end %>
</ul>

<h4>Previous Orders:</h4>
<ul>
  <% @user.inactive_carts.each do |cart| %>
    <li><%= link_to("Order ##{cart.id}", cart_path(cart)) + " placed on #{cart.order_date.strftime("%a %b %e, %Y")}." %> </li>
  <% end %>
</ul>
<% end %>
</div>

