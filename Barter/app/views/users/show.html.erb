<div class="ui large message">
  <h1 class="ui center aligned header">
    <%= @user.first_name %>  <%= @user.last_name %></h1>
   <i> <h4 class='ui center aligned header'>
    Member Since: <%= @user.member_since %> |
    <% if @user.college %>
  College: <%= link_to(@user.college.name, college_path(@user.college_id)) %>
    <% end %>

  <% if @user == current_user %>
    | Karma Balance: <%= @user.karma.balance %>
  <% end %></h4></i>
  <img class="ui centered medium rounded image" src="http://silvalanguagearts.pbworks.com/f/1372781548/banner_books2.jpg">

<% if @user.last_sign_in %>
  <p>Last Sign In: <%= @user.last_sign_in %></p>
<% end %>
<p>Books Sold: <%= @user.num_books_sold %></p>
<p>Books For Sale: <%= @user.num_books_for_sale %></p>


<p>College: <%= link_to(@user.college.name, college_path(@user.college)) if @user.college%></p>

 <h4>Books Currently Listed:</h4>


<div class="ui list">
  <% @user.books_for_sale.each do |book| %>
    <div class="item">
      <i class="remove icon userBookDelete" textbook="<%=book.textbook.id%>" userBook="<%=book.id%>" ></i>
      <div class="content">
        <%= link_to(book.textbook.title, textbook_path(book.textbook.id)) %> - Condish <%=book.condition.name%>
      </div>
    </div>
  <% end %>
</div>


<!-- <h4> Books You've Purchased: </h4>
<ul>
  <% @user.books_purchased.each do |book| %>
    <li><%= link_to(book.textbook.title, textbook_path(book.textbook.id)) %></li>
  <% end %>
</ul> -->

<% if current_user == @user %>
<h4>Books You've Sold:</h4>
<ul>
  <% @user.books_sold.each do |book| %>
    <li><%= link_to(book.textbook.title, textbook_path(book.textbook.id)) %></li>
  <% end %>
</ul>

<h4>Previous Orders:</h4>

<h4>
<div class="ui relaxed divided list">
  <% @user.inactive_carts.each do |cart| %>
  <div class="item">
    <i class="large cart middle aligned icon"></i>
    <div class="content">
      <p class="header"><%= link_to("Order ##{cart.id}", cart_path(cart)) + " placed on #{cart.order_date.strftime("%a %b %e, %Y")}" %></p>
      <div class="description">Total Price: <%=cart.cart_total_price%></div>
    </div>
  </div>
  <% end %>

</div>
</h4>
<%end%>



</div>
