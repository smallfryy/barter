<!DOCTYPE html>
<html>
<head>
  <title>Barter</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>

<script type="text/javascript">

$(function(){
  $('#buttonPress').click(function(){

    $('.ui.labeled.icon.sidebar').sidebar('toggle');
  })
})

</script>

<div class="ui fixed inverted main menu">
    <a class="launch icon item">
      <button id="buttonPress" class="content icon"></button>
    </a>

      <div class="item">
        Sidebar
      </div>

    <div class="right menu">

      <div class="vertically fitted borderless item">
        <iframe class="github" src="http://ghbtns.com/github-btn.html?user=semantic-org&amp;repo=semantic-ui&amp;type=watch&amp;count=true" allowtransparency="true" frameborder="0" scrolling="0" width="100" height="20"></iframe>
      </div>
    </div>
</div>


<body>
  <div class="ui left demo vertical inverted sidebar labeled icon menu defaultTransition ">
  <a href="<%=root_path%>" class="item">
    <i class="home icon"></i>
    Home
  </a>
  <a href="<%=user_path(current_user)%>" class="item">
    <i class="add to cart icon"></i>
    Profile
  </a>
  <a href="<%=cart_path(current_user.cart)%>"class="item">
    <i class="smile icon"></i>
    Cart
  </a>
</div>


<div class="ui page grid main">
  <div class="row">
    <div class="column padding-reset">
      <div class="ui large message">



        <p class="notice"><%= notice %></p>
         <p class="alert"><%= alert %></p>
         <div class="pusher">

        <%= yield %>
      </div>


      </div>
    </div>
  </div>
</div>






</body>
</html>
